
<div id="chatroom" class="col-xs-12 col-sm-offset-1 col-sm-10" id="chat_window_1">
    <div class="col-xs-12 col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading top-bar">
                <div class="col-md-8 col-xs-8">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-comment"></span> <%=@event.name%> - <%= current_user.name %></h3>
                </div>
                <div class="col-md-4 col-xs-4" style="text-align: right;">
                    <a href="#"><span id="minim_chat_window" class="glyphicon glyphicon-minus icon_minim"></span></a>
                </div>
            </div>

            <div id="chatwindow" class="panel-body msg_container_base">


            </div>


            <div class="panel-footer">
                <div id="userinput" class="input-group">
                    <input id="textbox" type="text" class="form-control input-sm chat_input" placeholder="Write your message here..." />
                    <span class="input-group-btn">
                        <button class="btn btn-sm" id="submitchat">Send</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

    
