<p id="notice"><%= notice %></p>

<div class="row hidden-xs	">
	<div class="col-xs-4 col-sm-3">
		<a href="#" class="thumbnail">
			<%= image_tag @user.avatar.url(:medium) %>
		</a>
	</div>

	<div class="col-xs-6 col-md-3">
		<p>
			<strong>Name:</strong>
			<%= @user.name %>
		</p>

		<p>
			<strong>Email:</strong>
			<%= @user.email %>
		</p>
		<% if current_user.friends && current_user.friends.include?(@user)%>
		<p>delete friend</p>
		<% elsif current_user.id != @user.id %>
		<p>add friend</p>
		<% end %>
		<% if current_user == @user %>
		<p><%= link_to 'Edit Profile', edit_user_path(current_user), { method: :get} %></p> 
		<% end %>
	</div>
</div>

<div class="row">
	<% if current_user && current_user.id == @user.id %>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 class="panel-title">Notifications</h4>
			</div>
			<ul class="list-group">
				<% current_user.notifications.each do |n| %>
				<li class="list-group-item">
					<%= n.message %> <%= render 'notification', :n => n if n.type == "FriendRequest" && n.accept == nil%>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 class="panel-title">Events</h4>
			</div>
			<ul class="list-group">
				<% @events.each do |event| %>
				<li class="list-group-item"><%= link_to event.name, event_path(event) %></li>
				<% end %>
			</ul>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 class="panel-title inline-block">Friends</h4>
				<button class="pull-right btn btn-default btn-circle" data-toggle="modal" data-target="#friend-search-modal"><span class="glyphicon glyphicon-plus" aria-hidden="true"></button>
			</div>
			<ul class="media-list list-group">
				<% current_user.friends.each do |friend| %>
				<li class="media list-group-item">
					<div class="media-left">
						<%= image_tag friend.avatar.url(:thumb), class: "avatar" %>
					</div>
					<div class="media-body">
						<%= link_to friend.name, user_path(friend) %>
					</div>
				</li>
				<% end %>
			</ul>
			<% end %>
		</div>
	</div>
</div>

<div class="modal fade" id="friend-search-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="exampleModalLabel">Find New Friends</h4>
			</div>
			<div class="modal-body">
				<form class= "search" action = "/users" method= 'GET'>
					<div class="form-group">
						<input type="text" name="search" class="search-bar form-control" id="recipient-name" placeholder="Search..." data-toggle="collapse" aria-expanded="false" aria-controls="collapseExample">
						<span class="glyphicon glyphicon-search"></span>
					</div>
				</form>
			<div class="panel panel-default">
				<ul class="media-list list-group">
				<% current_user.friends.each do |friend| %>
				<li class="media list-group-item">
					<div class="media-left">
						<%= image_tag friend.avatar.url(:thumb), class: "avatar" %>
					</div>
					<div class="media-body">
						<%= link_to friend.name, user_path(friend) %>
					</div>
				</li>
				<% end %>
			</ul>
			</div>
			</div>
		</div>
	</div>
</div>



