	    	google.maps.event.addListener(marker.serviceObject, 'mouseover', function () {
	    			marker.infowindow.open(handler.map, this)
	    		}
	    	)
	    })
	    console.log(<%=raw @hash.to_json %>)
	    
	    handler.bounds.extendWith(markers);
	    handler.fitMapToBounds();
