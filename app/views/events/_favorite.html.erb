<div class="favorite-panel col-xs-3">
	<div id= "<%= restaurant.id %>"class="panel panel-default">
		<div class="panel-heading">
		  <h4 id="name"><%= restaurant.name %></h4>
		</div>
		<div class="panel-body">
			<h5><%= restaurant.cuisine %></h5>
			<h5><%= '$' * restaurant.price %></h5>
			<h5><%= restaurant.rating %></h5>
			<% if current_user.id == @event.creator.id %>
				<% if restaurant.address == @event.location %>
			  	<span aria-hidden="true" class="glyphicon glyphicon-ok confirmed cursor"></span>
			  <% else %>
			  	<span aria-hidden="true" class="glyphicon glyphicon-ok confirm cursor"></span>
			  <% end %>
			<% end %>
		  <% if restaurant.favorites.find_by(user_id: current_user.id) == nil%> 
		   <span aria-hidden="true" class="glyphicon glyphicon-heart favorite cursor"><%= restaurant.favorites.count %></span>
		  <% else %>
		  	<span aria-hidden="true" class="glyphicon glyphicon-heart favorited cursor"><%= restaurant.favorites.count %></span>
		  <% end %> 
		</div>
	</div>
</div>
