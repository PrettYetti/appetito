    <!-- Intro Header -->
    <header class="intro">
        <div class="intro-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="brand-heading">appetito</h1>
                        <p class="intro-text">Find the right place to dine.</p>
                        <a href="#about" class="btn btn-circle page-scroll pulse">
                            <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span> 
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Invite Section -->
    <div class="paper">
    <section id="about" class="container content-section">
        <div class="row">
            <div class="col-lg-4 text-center">
                <%= image_tag "display/icons/chat.svg", class: "intro-icon" %><h2 class="inline-block">Invite Friends</h2>
                <p>Create a plan to dine out and invite your friends to a group chat.</p>
            </div>
            <div class="col-lg-4 text-center">
                <%= image_tag "display/icons/utensils.svg", class: "intro-icon" %><h2 class="inline-block">Find Restaurants</h2>
                <p>Appetito locates restaurants based on you and your friends' locations. Narrow down choices with price, cuisine, and reservation filters.</p>
            </div>
            <div class="col-lg-4 text-center">
                <%= image_tag "display/icons/check.svg", class: "intro-icon" %><h2 class="inline-block">Vote and Confirm</h2>
                <p>Vote on your favorites as a group and confirm the restaurant to dine together.</p>
            </div>
        </div>
    </section>
</div>

<!-- Splash Graphic -->
<div id="bg2-intro">
</div>

