<div id="bg3-intro">
</div>

    <!-- Sign Up-->
    <div class="paper">
    <section id="signup" class="container content-section">
        <div class="row">
            <div class="col-lg-offset-4 col-lg-4">
                <%= button_to "Sign Up", new_user_path, {:class => "btn btn-default btn-lg btn-block margin-10", :method => :get}  %>
                <%= button_to "Guest Log In", new_user_path, {:class => "btn btn-default btn-lg btn-block margin-10", :method => :get}  %>
            </div>
        </div>
    </section>
</div>

    

